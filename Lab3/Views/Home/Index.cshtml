@model IEnumerable<Contact>

@{
    ViewData["Title"] = "Contact Manager";
    ViewBag.Title = "Contact Manager";
}

<a asp-controller="Contact" asp-action="Add"></a>
<table>
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Category</th>

    </tr>
    </thead>
    <tbody>
    @foreach (Contact c in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Contact" asp-action="Details" 
                       asp-route-id="@c.ContactId" asp-route-slug="@c.FirstName"></a>
                </td>
                <td>
                    <a asp-controller="Contact" asp-action="Details"
                   asp-route-id="@c.ContactId" asp-route-slug="@c.LastName"></a>
                </td>
                <td>
                    @c.phone
                </td>
                <td>
                   @c.Email
                </td>
                <td>
                   @c.Category.Name
                </td>
            </tr>
        }
        <tr></tr>


    </tbody>
</table>
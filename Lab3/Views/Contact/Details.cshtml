@model Contact

@{
    ViewData["Title"] = "Contact Details";
    ViewBag.Title = "Contact Details";
}

<h2>Contact Details</h2>

<ul>
    <li>
        <label>Name: </label>
        @Model.FirstName @Model.LastName
    </li>
    <li>
        <label>Phone:</label>
        @Model.phone
    </li>
    <li>
        <label>Email:</label>
        @Model.Email
    </li>

    <li>
        <label>Category:</label>
        @Model.Organization
    </li>
    <li>
        <label>Date Added:</label>
        @Model.DateAdded
    </li>
    <li>
        <a asp-controller="Contact" asp-action="Edit"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug">Edit</a>
        
        <a asp-controller="Contact" asp-action="Delete"
           asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug">Delete</a>
        
        <a asp-controller="Home" asp-action="Index">Home</a>
    </li>

</ul>